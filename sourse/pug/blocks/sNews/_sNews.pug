mixin sNews(data)
	// start sNews
	+b.SECTION.sNews.section#sNews&attributes(attributes)
		.container-xl-fluid.container
			.section-inner
				.container
					+b.section-title( data-aos="fade-up") 
						.row
							.col
								h2 Новости
							.col-auto
								+e.link(href="#") 
									+icon("arrow-right")
					+e.row.row
						mixin item(i)
							+e.col.col-lg-4.col-sm-6 
								+e.item(href="#")
									+e.img-wrap( data-aos="fade-up") 
										+img(`img/news-img-${i}.jpg`).res-i
									+e.caption
										+e.date( data-aos="fade-up")  30 ноября
										+e.title.h6( data-aos="fade-up")  Опубликован шорт-лист Премии Рунета 2022
										p( data-aos="fade-up")  6 декабря 2022 года объявлен шорт-лист Премии Рунета — престижной награды российской интернет-отрасли, которая в этом году будет вручена уже в 19-й раз
						+item(1)
						+item(2)
						+item(3)
	// end sNews